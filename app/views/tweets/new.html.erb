    <div class="content">
     <div class="row" style="text-align:center;">
      <%= form_for(@tweet) do |f| %>
        <div class="row">
        <h3 style="opacity:0.5;">post</h3>
          <div class="input-field col s6">
            <%=f.text_field :image %>
          </div>
          <div class="input-field col s10">
            <%=f.text_area :text, placeholder:"text" %>
          </div>
        </div>
        <%=f.submit"sent", class:"btn waves-effect waves-light" %>
      <% end %>
      </div>
    </div>